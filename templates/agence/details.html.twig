{# templates/agence/details.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="bg-white shadow rounded-lg p-6">
        <div class="mb-6">
            <a href="{{ path('app_agences_index') }}" 
               class="text-blue-500 hover:text-blue-700">
                ← Retour à la liste
            </a>
        </div>

        <h1 class="text-2xl font-bold mb-6">Détails de l'agence {{ agence.numero }}</h1>

        <div class="grid grid-cols-2 gap-6">
            <div class="bg-gray-50 p-4 rounded">
                <h2 class="text-lg font-semibold mb-2">Informations générales</h2>
                <div class="space-y-3">
                    <div>
                        <span class="font-medium">Numéro:</span>
                        <span class="ml-2">{{ agence.numero }}</span>
                    </div>
                    <div>
                        <span class="font-medium">Adresse:</span>
                        <span class="ml-2">{{ agence.Adresse }}</span>
                    </div>
                    <div>
                        <span class="font-medium">Téléphone:</span>
                        <span class="ml-2">{{ agence.Telephone }}</span>
                    </div>
                    
                </div>
            </div>

            <div class="bg-gray-50 p-4 rounded">
                <h2 class="text-lg font-semibold mb-2">Actions</h2>
                <div class="space-x-2">
                    <a href="{{ path('app_agences_index', {'edit': agence.id}) }}" 
                       class="inline-block px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600">
                        Modifier
                    </a>
                    <button onclick="openDeleteModal({{ agence.id }})"
                            class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600">
                        Supprimer
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

{# Modal de confirmation de suppression #}
<div id="deleteModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full">
    {# ... (même modal que dans index.html.twig) ... #}
</div>

<script>
    // ... (même script que dans index.html.twig) ...
</script>
{% endblock %}