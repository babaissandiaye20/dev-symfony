<div class="bg-white shadow rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-4 py-2">Numéro</th>
                <th class="px-4 py-2">Adresse</th>
                <th class="px-4 py-2">Téléphone</th>
                <th class="px-4 py-2">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for agence in pagination %}
            <tr>
                <td class="px-4 py-2">{{ agence.numero }}</td>
                <td class="px-4 py-2">{{ agence.adresse }}</td>
                <td class="px-4 py-2">{{ agence.telephone }}</td>
                <td class="px-4 py-2 space-x-2">
                    <a href="{{ path('app_agence_edit', {id: agence.id}) }}" 
                       class="inline-block px-3 py-1 bg-yellow-500 text-white rounded hover:bg-yellow-600">
                        Modifier
                    </a>
                    <a href="{{ path('app_agence_delete', {id: agence.id}) }}" 
                       class="delete-agence inline-block px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600">
                        Supprimer
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<div class="mt-4">
    {{ knp_pagination_render(pagination) }}
</div>