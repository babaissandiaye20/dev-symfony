{# templates/agence/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Nouvelle Agence{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-6">Nouvelle Agence</h1>

        {{ form_start(form, {'attr': {'class': 'max-w-lg'}}) }}
            <div class="mb-4">
                {{ form_label(form.Adresse, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(form.Adresse, {'attr': {
                    'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'
                }}) }}
                {{ form_errors(form.Adresse) }}
            </div>

            <div class="mb-6">
                {{ form_label(form.Telephone, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(form.Telephone, {'attr': {
                    'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'
                }}) }}
                {{ form_errors(form.Telephone) }}
            </div>

            <div class="flex gap-4">
                <button type="submit" class="px-6 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">
                    Enregistrer
                </button>
                <a href="{{ path('app_agences_index') }}" class="px-6 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600">
                    Retour
                </a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}